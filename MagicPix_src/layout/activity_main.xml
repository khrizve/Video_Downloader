<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fantasy_background"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_text"
        android:textSize="24sp"
        android:textColor="@color/fantasy_primary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold" />

    <!-- Image Preview -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/fantasy_secondary"
        android:contentDescription="@string/selected_image_description"
        android:scaleType="centerCrop"
        tools:ignore="ImageContrastCheck,RedundantDescriptionCheck" />

    <!-- Select Image Button -->
    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/fantasy_primary"
        android:text="@string/select_image_button"
        android:textColor="#FFFFFF" />

    <!-- Convert to Audio Button -->
    <Button
        android:id="@+id/convertToAudioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/fantasy_primary"
        android:text="@string/convert_to_audio_button"
        android:textColor="#FFFFFF" />

    <!-- Regenerate Image Button -->
    <Button
        android:id="@+id/regenerateImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertToAudioButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/fantasy_primary"
        android:text="@string/regenerate_image_button"
        android:textColor="#FFFFFF" />

    <!-- Save Audio Button -->
    <Button
        android:id="@+id/saveAudioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regenerateImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/fantasy_primary"
        android:text="@string/save_audio_button"
        android:textColor="#FFFFFF" />

    <!-- Save Image Button -->
    <Button
        android:id="@+id/saveImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveAudioButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/fantasy_primary"
        android:text="@string/save_image_button"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/fantasy_primary"
        android:text="About"
        android:textColor="#FFFFFF" />

    <!-- Footer -->
    <TextView
        android:id="@+id/footerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/footer_text"
        android:textSize="14sp"
        android:textColor="@color/fantasy_text"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>