<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fantasy_background"
    android:gravity="center">

    <!-- Main container to center all elements together -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/splash_logo_card"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/splash_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/magicpix"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="71dp"
            android:text="Hide Images in Sound"
            android:textColor="@color/fantasy_text"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/splash_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:indeterminate="true" />

    </LinearLayout>
</RelativeLayout>